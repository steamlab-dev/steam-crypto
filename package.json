{
  "name": "@steamlab/steam-crypto",
  "version": "0.0.2",
  "description": "Steam client connection crypto utilities.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "test -f .git/config && husky || true",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc",
    "check": "biome check .",
    "fix": "biome check --write .",
    "test": "vitest",
    "test:package": "./scripts/test-package.sh",
    "build": "tsdown",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "license": "MIT",
  "keywords": [
    "steam",
    "steam client",
    "steam crypto"
  ],
  "engines": {
    "npm": ">=9.5.1",
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcastrocs/steam-client-crypto.git"
  },
  "bugs": {
    "url": "https://github.com/fcastrocs/steam-client-crypto/issues"
  },
  "homepage": "https://github.com/fcastrocs/steam-client-crypto#readme",
  "dependencies": {
    "@steamlab/steam-crypto": "^0.0.2"
  }
}
